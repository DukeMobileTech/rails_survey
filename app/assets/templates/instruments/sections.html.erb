<div ng-controller="InstrumentSectionsCtrl">
  <div ng-include="'instruments/show.html'"></div>
  <h4 class="text-center">Display Sections</h4>

  <div class="card">
    <div class="card-body card-padding">
      <h5 class="row m-1">
        <div class="col-md-8">Title</div>
        <div class="col-md-4">Actions</div>
      </h5>
      <div class="row m-1" ng-repeat="section in sections">
        <div class="col-md-8">
          <input type="text" class="form-control" ng-model="section.title" />
        </div>
        <div class="col-md-4">
          <button class="btn btn-primary" ng-click="saveSection(section)">Save</button>
          <button class="btn btn-danger" ng-click="deleteSection(section)">Delete</button>
        </div>
      </div>
      <div class="m-1">
        <div class="btn btn-success float-right" ng-click="createSection()">New Section</div>
      </div>
    </div>
  </div>
</div>
