<div ng-controller="ValidationTranslationsCtrl">
  <h4 class="text-center">Translations</h4>
  <div class="row">
    <label class="col-sm-4 text-right">Language</label>
    <div class="col-sm-8 form-group text-left">
      <select
        class="form-control"
        ng-model="language"
        ng-options="language[1] as language[0] for language in languages"
        ng-change="updateLanguage()"
      >
      </select>
    </div>
  </div>
  <div class="card">
    <div class="card-body card-padding">
      <table class="table table-hover">
        <thead>
        <tr class="row">
          <th class="col-md-4">Validation Text</th>
          <th class="col-md-8">Translated Text</th>
        </tr>
        </thead>
        <tbody>
        <tr class="row" ng-repeat="validation in validations">
          <td class="col-md-4" ng-bind-html="validation.validation_message | ToTrustedHtml"></td>
          <td class="col-md-8">
            <text-angular
              ta-toolbar="toolBar"
              name="validation-translation-{{validation.id}}-{{$index}}"
              ng-model="translationFor(validation).text"
              ta-text-editor-class="form-control translation-height"
              ta-html-editor-class="form-control translation-height">
            </text-angular>
          </td>
        </tr>
        </tbody>
      </table>
      <div class="m-1">
        <div class="btn btn-success pull-right" ng-click="save()">Save</div>
      </div>
    </div>
  </div>
</div>
