<div ng-controller="QuestionsCtrl">
  <input type="search" ng-model="q.$" placeholder="Filter questions ..." class="form-control tm-search text-center">
  <div class="row m-1">
    <label class="col-md-2">Identifier</label>
    <label class="col-md-2">Parent Identifier</label>
    <label class="col-md-2">Type</label>
    <label class="col-md-4">Text</label>
    <label class="col-md-2">Actions</label>
  </div>
  <div class="row m-1" ng-repeat="question in questions | filter:q | orderBy: 'id' track by question.id">
    <div class="col-md-2">
      <a ui-sref="questionSetQuestion({question_set_id: questionSet.id, id: question.id})">
        {{question.question_identifier}}
      </a>
    </div>
    <div class="col-md-2">{{question.parent_identifier}}</div>
    <div class="col-md-2">{{question.question_type}}</div>
    <div class="col-md-4" ng-bind-html="question.text"></div>
    <div class="col-md-2">
      <div class="btn btn-primary" ng-click="copyQuestion(question)">Copy</div>
      <div class="btn btn-danger" ng-click="deleteQuestion(question)">Delete</div>
    </div>
  </div>
  <div>
    <div ng-show="multiple" class="btn btn-primary pull-left" ng-click="done()">Done</div>
    <div ng-hide="multiple" class="btn btn-secondary pull-left" ng-click="back()">Back</div>
    <div class="btn btn-primary pull-right" ng-click="newQuestion()">Add Question</div>
  </div>
</div>
