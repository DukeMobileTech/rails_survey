<div ng-controller="QuestionsCtrl">
  <h4 class="text-center"><strong>Questions In Set</strong></h4>
    <div class="row m-5">
      <label class="col-md-3">Identifier</label>
      <label class="col-md-3">Type</label>
      <label class="col-md-4">Text</label>
      <label class="col-md-1">Actions</label>
    </div>
    <div class="row m-5" ng-repeat="question in questions | orderBy: 'id' track by question.id">
      <div class="col-md-3">
        <a href="{{baseUrl}}/question_sets/{{questionSet.id}}/questions/{{question.id}}">
          <strong>{{question.question_identifier}}</strong>
        </a>
      </div>
      <div class="col-md-3">{{question.question_type}}</div>
      <div class="col-md-4" ng-bind-html="question.text | limitTo:100"></div>
      <div class="col-md-2">
        <div class="btn btn-primary" ng-click="copyQuestion(question)">Copy</div>
        <div class="btn btn-danger" ng-click="deleteQuestion(question)">Delete</div>
      </div>
    </div>
    <div class="row m-5 ">
      <div ng-show="multiple" class="btn btn-primary pull-left" ng-click="done()">Done</div>
      <div ng-hide="multiple" class="pull-left btn btn-default" ng-click="back()">Back</div>
      <div class="btn btn-primary pull-right" ng-click="newQuestion()">Add Question</div>
    </div>
</div>
