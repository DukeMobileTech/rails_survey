<div class="card" ng-controller="SectionTranslationsCtrl">
  <div class="card-body card-padding">
    <h4 class="text-center">Translations</h4>
    <div class="row m-1">
      <label class="col-sm-4 text-right">Language</label>
      <div class="col-sm-8 form-group text-left">
        <select
          class="form-control"
          ng-model="language"
          ng-options="language[1] as language[0] for language in languages"
          ng-change="updateLanguage()"
        >
        </select>
      </div>
    </div>
    <div ng-show="language">
      <h5 class="row m-1">
        <div class="col-md">Section Title</div>
        <div class="col-md">Translation</div>
      </h5>
      <div class="row m-1" ng-repeat="section in sections">
        <div class="col-md">{{section.title}}</div>
        <div class="col-md">
          <textarea
            class="form-control"
            name="section-translation-{{section.id}}"
            ng-model="translationFor(section).text">
          </textarea>
        </div>
      </div>
      <div class="btn btn-success float-right m-1" ng-click="saveTranslations()">Save</div>
    </div>
  </div>
</div>
