<ng-form name="newDisplayForm" ng-controller="NewDisplayCtrl">
  <div ng-include="'instruments/show.html'"></div>
  <h4 class="text-center">Instrument Displays</h4>

  <div class="card">
    <div class="card-body card-padding">
      <div class="row m-1">
        <label class="col-md-2">Display Title</label>
        <div class="col-md-10">
          <input class="form-control" type="text" ng-model="display.title" required/>
        </div>
      </div>
      <div class="row m-1">
        <label class="col-md-2">Section Title</label>
        <div class="col-md-10">
          <select
          class="form-control"
          name="display-section-title"
          ng-model="display.section_id"
          ng-options="section.id as section.title for section in sections"
          required>
          </select>
        </div>
      </div>
      <div class="row m-1">
        <label class="col-md-2">Position</label>
        <div class="col-md-10">
          <input class="form-control" type="number" ng-model="display.position" required/>
        </div>
      </div>
      <div class="m-1">
        <button class="btn btn-success float-right oi oi-cloud-upload"
        ng-disabled="newDisplayForm.$invalid" ng-click="saveDisplay()"/>
      </div>
    </div>
  </div>
</ng-form>
