<div class="row">
  <h4 class="col-md-8 text-center"><strong>Question Display Order</strong></h4>
  <div class="col-md-4">
    <div class="btn btn-primary pull-right" ng-click="newDisplay()">New Display</div>
  </div>
</div>
<div class="card">
  <div class="card-body card-padding">
    <div ng-controller="DisplaysCtrl">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-md-2">Position</th>
            <th class="col-md-2">Mode</th>
            <th class="col-md-6">Questions On Screen</th>
            <th class="col-md-2"></th>
          </tr>
        </thead>
        <tbody ui-sortable="sortableDisplays" ng-model="displays">
          <tr ng-repeat="display in displays | orderBy:'position'">
            <td class="col-md-2">
              <a class="btn bgm-teal moveDisplay">
                <i class="md-swap-vert">{{display.position}}</i>
              </a>
            </td>
            <th class="col-md-2">{{display.mode}}</th>
            <th class="col-md-6">
              <ul ng-repeat="instrumentQuestion in display.instrument_questions">
                <span>{{instrumentQuestion.type}}</span> :
                <span>{{instrumentQuestion.identifier}}</span>
              </ul>
            </th>
            <th class="col-md-2">
              <div class="btn btn-success" ng-click="edit(display)">Edit</div>
              <div class="btn btn-danger" ng-click="delete(display)">Delete</div>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
