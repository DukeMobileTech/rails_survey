<h4 class="text-center">Translations for {{language}}</h4>
<div class="card">
  <div class="card-body card-padding">
    <div ng-controller="OptionTranslationsCtrl">
      <table class="table table-hover">
        <thead>
          <tr class="row">
            <th class="col-md-6">Option Text</th>
            <th class="col-md-6">Translation</th>
          </tr>
        </thead>
        <tbody>
          <tr class="row" ng-repeat="option in options">
            <td class="col-md-6">{{option.text}}</td>
            <td class="col-md-6">
              <textarea
              class="form-control"
              name="option-translation-{{option.id}}"
              ng-model="translationFor(option).text">
            </textarea>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="m-1">
        <div class="btn btn-success pull-right" ng-click="save()">Save</div>
      </div>
    </div>
  </div>
</div>
