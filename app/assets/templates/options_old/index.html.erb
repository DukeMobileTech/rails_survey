<div ng-controller="OptionsCtrl">
  <h4 class="text-center"><strong>Options In Set</strong></h4>
  <div class="row">
    <label class="col-md-2">Position</label>
    <label class="col-md-8">Text</label>
    <label class="col-md-2">Actions</label>
  </div>
  <div ui-sortable="sortableOptions" ng-model="options">
    <div ng-repeat="option in options">
      <div class="row m-5">
        <label class="col-md-2">
          <div class="btn bgm-teal m-5 moveOption">
            <i class="md-swap-vert">{{option.number_in_question}}</i>
          </div>
        </label>
        <a class="col-md-8" ng-click="editOption(option)">{{option.text}} </a>
        <div class="col-md-2">
          <div class="btn btn-danger" ng-click="deleteOption(option)">Delete</div>
        </div>
      </div>
      <div ng-show="currentOption == option">
        <div ng-include='"options/show.html"'></div>
      </div>
    </div>
  </div>
  <div class="row m-5">
    <div class="col-md-6">
      <div class="pull-left btn btn-default" ng-click="back()">Back</div>
    </div>
    <div class="col-md-6">
      <div class="pull-right btn btn-primary" ng-click="newOption()">Add Option</div>
    </div>
  </div>
</div>
