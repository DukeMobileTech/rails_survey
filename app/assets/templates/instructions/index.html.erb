<h4 class="text-center"><strong>Instructions</strong></h4>
<div class="row m-5">
  <a class="btn btn-primary" href="{{baseUrl}}/instruction_translations">Translations</a>
</div>
<div class="card">
  <div class="card-body card-padding">
    <div ng-controller="InstructionsCtrl">
      <input type="search" ng-model="i.title" placeholder="Filter instructions ..."
      class="form-control tm-search text-center">
      <div ng-repeat="instruction in instructions | filter:i">
        <div class="row m-5">
          <div class="col-md-10">
            <a href="{{baseUrl}}/instructions/{{instruction.id}}"><strong>{{instruction.title}}</strong></a>
          </div>
          <div class="col-md-2">
            <div class="btn btn-danger" ng-click="deleteInstruction(instruction)">Delete</div>
          </div>
        </div>
      </div>
      <div ng-hide="showNewInstruction" class="btn btn-primary m-5"
        ng-click="createInstruction()">New Instruction</div>
      <ng-form class="row" name="newInstructionForm" ng-show="showNewInstruction">
          <label class="col-md-2">Title</label>
          <div class="col-md-8">
            <input type="text" class="form-control" name="new-instruction"
            ng-model="newInstruction.title" required>
          </div>
          <div class="col-md-1">
            <div class="btn btn-default" ng-click="cancelNewInstruction()">Cancel</div>
          </div>
          <div class="col-md-1">
            <div class="btn btn-success" ng-disabled="newInstructionForm.$invalid"
            ng-click="saveInstruction()">Save</div>
          </div>
      </ng-form>
    </div>
  </div>
</div>
