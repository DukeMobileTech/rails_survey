<section class="widget">
  <div class="block-header text-center text-capitalize">
    <h2><i class="md-check c-indigo"> Rules </i></h2>
    <%= link_to new_project_rule_path(current_project), class: 'btn btn-primary pull-right' do %>
        <i class="md-add">New Rule</i>
    <% end %>
  </div>
  <div class="body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Instrument</th>
        <th>Rule Type</th>
        <th>Rule Parameters</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @rules.each do |rule| %>
          <tr>
            <td><%= rule.instrument.title %></td>
            <td><%= rule.rule_type %></td>
            <td>
              <% rule.rule_params_hash.each_pair do |key, value| %>
                  <strong><%= key %>:</strong> <%= value %><br/>
              <% end %>
            </td>
            <td><%= button_to 'Delete', project_rule_path(current_project, rule), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
