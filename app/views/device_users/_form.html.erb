<section>
  <div class="block-header text-center text-uppercase">
    <h2><i class="md-person c-indigo"> Device User </i></h2>
  </div>
  <%= form_for([current_project, @device_user]) do |f| %>
      <% if @device_user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@device_user.errors.count, "error") %> prohibited this section from being saved:</h2>
            <ul>
              <% @device_user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :name, 'Name', class: 'control-label' %>
        </div>
        <div class="col-sm-10">
          <div class="fg-line">
            <%= f.text_field :name, class: 'form-control input-sm' %>
          </div>
        </div>
      </div>

      <div class="form group">
        <div class="col-sm-2">
          <%= f.label :username, 'Username', class: 'control-label' %>
        </div>
        <div class="col-sm-10">
          <div class="fg-line">
            <%= f.text_field :username, class: 'form-control input-sm' %>
          </div>
        </div>
      </div>

      <div class="form group">
        <div class="col-sm-2">
          <%= f.label :password, 'Password', class: 'control-label' %>
        </div>
        <div class="col-sm-10">
          <div class="fg-line">
            <%= f.password_field :password, class: 'form-control input-sm' %>
          </div>
        </div>
      </div>

      <div class="form group">
        <div class="col-sm-2">
          <%= f.label :password_confirmation, 'Password again', class: 'control-label' %>
        </div>
        <div class="col-sm-10">
          <div class="fg-line">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form group">
        <div class="col-sm-2">
          <%= f.label :active, 'Active' %>
        </div>
        <div class="col-sm-10">
          <div class="fg-line">
            <%= f.check_box :active %>
          </div>
        </div>
      </div>

      <div class="clearfix"></div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary pull-right' %>
      </div>
  <% end %>
</section>
