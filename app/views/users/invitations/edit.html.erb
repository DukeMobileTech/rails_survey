<h2 class="text-center"><%= t 'devise.invitations.edit.header' %></h2>

<div class="row">
  <%= form_for resource, :as => resource_name, :url => user_invitation_path, :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <% if f.object.class.require_password_on_accepting %>
  <div class="row m-5">
    <div class="col-md-3"><%= f.label :password, class: 'control-label' %></div>
    <div class="col-md-9"><%= f.password_field :password, class: 'form-control' %></div>
  </div>
  <div class="row m-5">
    <div class="col-md-3"><%= f.label :password_confirmation, class: 'control-label' %></div>
    <div class="col-md-9"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
  </div>
  <% end %>

  <div class="text-center m-5">
    <%= f.button :submit, class: 'btn btn-success pull-right' %>
  </div>
  <% end %>
</div>
