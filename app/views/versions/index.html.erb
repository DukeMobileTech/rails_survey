<h1><%= @instrument.title %> versions</h1>

<section class="widget">
  <div class="body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Version Number</th>
          <th>Instrument Title</th>
          <th>Created by</th>
          <th>Created at</th>
        </tr>
      </thead>
      <tbody>
        <% @instrument.versions.each_with_index do |version, index| %>
            <tr>
              <td><%= link_to index, instrument_version_path(@instrument, index) %></td>
              <td><%= version.reify.title %></td>
              <td><%= User.find(version.whodunnit.to_i).email %></td>
              <td><%= version.created_at %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
