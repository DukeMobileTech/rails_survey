<div class="block-header text-center text-capitalize">
  <h2><i class="md-track-changes c-indigo"> <%= @instrument_version.title %> </i></h2>
</div>

<div class="card card-body card-padding">
  <ol class="questions">
    <% @instrument_version.questions.each do |question| %>
        <li>
          <%= raw question.text %> <br/>
          <span class="label label-info"><%= question.question_type %></span>
          <% if question.options? %>
              <br/>Options:
              <ol class="options" start="0">
                <% question.options.each do |option| %>
                    <li><%= option.text %></li>
                <% end %>
              </ol>
          <% end %>
        </li>
    <% end %>
  </ol>
  <div class="clearfix"></div>
</div>
