<!DOCTYPE html>
<html>
  <head>
    <title>iSEE</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load('visualization', '1', {'packages': ['corechart']});
    </script>
    <script>
      window._base_url = "<%= ENV['BASE_URL'] %>"
    </script>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta charset="utf-8">
  </head>

  <body ng-app="Survey">
    <header id="header">
      <%= render 'layouts/header' %>
    </header>

    <% flash.each do |key, msg| %>
    <% if key == :alert or key == :notice %>
    <div class="alert alert-<%= key == :alert ? 'danger' : 'success' %> alert-dismissible text-center" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= msg %>
    </div>
    <% end %>
    <% end %>

    <section id="main">
      <aside id="sidebar">
        <div class="sidebar-inner c-overflow">
          <%#= render 'layouts/sidebar' %>
          <% if current_user %>
          <ul class="main-menu">
            <% if current_user.admin_user? %>
              <li>
                <%= link_to admin_dashboard_path, target: :_blank do %>
                <i class="md md-verified-user"></i>Admin Dashboard
                <% end %>
              </li>
            <% end %>
            <li class="sub-menu">
              <a href=""><i class="md md-dashboard"></i>Components Bank</a>
              <ul>
                <li><a ui-sref="questionSets({})">Question Sets</a></li>
                <li><a ui-sref="optionSets({})">Option Sets</a></li>
                <li><a ui-sref="instructions({})">Instructions</a></li>
                <li><a ui-sref="rules({})">Rules</a></li>
              </ul>
            </li>
            <li class="sub-menu">
              <a href=""><i class="md md-home"></i>Projects</a>
              <ul>
                <% current_user.projects.each do |project| %>
                  <li><a href='<%= "{{baseUrl}}/projects/#{project.id}" %>'><%= project.name %></a></li>
                <% end %>
              </ul>
            </li>
          </ul>
          <% end %>
        </div>
      </aside>

      <section id="content">
        <div class="container">
          <%= yield %>
        </div>
      </section>
    </section>

    <%= render 'layouts/footer' %>
  </body>
</html>
