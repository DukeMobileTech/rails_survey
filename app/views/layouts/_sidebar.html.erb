        <% end %>
      </li>
      <li>
        <%= link_to project_rosters_path(current_project) do %>
        <i class="md-file-download"></i>
        <span class="name">Rosters</span>
        <% end %>
      </li>
      <li>
        <%= link_to project_score_schemes_path(current_project) do %>
        <i class="md-grade"></i>
        <span class="name">Schemes</span>
        <% end %>
      </li>
      <li>
        <%= link_to project_scores_path(current_project) do %>
        <i class="md-report"></i>
        <span class="name">Scores</span>
        <% end %>
      </li>
    </ul>
  </li>

  <li>
    <%= link_to project_notifications_path(current_project) do %>
    <i class="md-notifications"></i>
    <span class="name">Notifications</span>
    <% end %>
  </li>

