  <li>
    <%= link_to project_device_users_path(current_project) do %>
    <i class="md-account-circle"></i>Device Users
    <% end %>
  </li>

  <li class="sub-menu">
    <a href="">
      <i class="md md-mode-edit"></i>Instruments</a>
    <ul>
      <li><%= link_to 'View Instruments', project_instruments_path(current_project) %></li>
      <li><%= link_to 'New Instrument', new_project_instrument_path(current_project) %></li>
    </ul>
