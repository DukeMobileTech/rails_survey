<% unless request.path.include? 'wiki' %>
<% if current_project %>
<ul class="main-menu">
  <% if current_user.admin_user? %>
  <li>
    <%= link_to admin_dashboard_path do %>
    <i class="md md-verified-user"></i>
    Admin Dashboard
    <% end %>
  </li>
  <% end %>
  <li class="sub-menu">
    <a href=""><i class="md md-dashboard"></i>Components Bank</a>
    <ul>
      <li><a href="/question_sets"><i class="md-subject"></i>Questions</a></li>
      <li><a href="/option_sets"><i class="md-format-list-bulleted"></i>Options</a></li>
      <li><a href="/instructions"><i class="md-flag"></i>Instructions</a></li>
    </ul>
  </li>
  <li>
    <%= link_to root_path do %>
    <i class="md md-home"></i>
    Projects
    <% end %>
  </li>

  <% if current_project.id %>
  <li>
    <%= link_to project_devices_path(current_project) do %>
    <i class="md-android"></i>Devices
    <% end %>
