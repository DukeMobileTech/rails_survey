<% if current_user && current_user.admin_user? %>
<ul class="main-menu">
  <li>
    <%= link_to admin_dashboard_path do %>
    <i class="md md-verified-user"></i>Admin Dashboard
    <% end %>
  </li>
  <li class="sub-menu">
    <a href=""><i class="md md-dashboard"></i>Components Bank</a>
