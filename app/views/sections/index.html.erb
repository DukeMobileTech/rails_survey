<div class="block-header text-center text-capitalize">
  <h2><i class="md-filter-list c-indigo"> Instrument Sections </i></h2>
</div>

<div class="card">
  <div class="card-body card-padding">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>Start question identifier</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      </thead>

      <tbody>
      <% @sections.each do |section| %>
          <tr>
            <td><%= section.title %></td>
            <td><%= section.start_question_identifier %></td>
            <td><%= link_to 'Edit', edit_project_instrument_section_path(current_project, @instrument, section), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', project_instrument_section_path(current_project, @instrument, section), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="clearfix m-25"></div>
  <%= link_to new_project_instrument_section_path(current_project, @instrument), class: 'btn btn-primary m-l-25' do %>
      <i class="md-add">Add Section</i>
  <% end %>
  <div class="clearfix m-25"></div>
</div>