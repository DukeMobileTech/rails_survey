<div class="block-header text-center text-capitalize">
  <h2><i class="md-filter-list c-indigo"> Instrument Section </i></h2>
</div>
<div class="card">
  <div class="card-body card-padding">
    <%= form_for([current_project, @instrument, @section]) do |f| %>
        <% if @section.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>
              <ul>
                <% @section.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <div class="col-sm-3">
            <%= f.label :title, 'Section Title', class: 'control-label' %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-3">
            <%= f.label :start_question_identifier, 'Beginning of section question identifier', class: 'control-label' %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :start_question_identifier, class: 'form-control' %>
          </div>
        </div>
        <div>
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
        <div class="clearfix"></div>
    <% end %>
  </div>
</div>