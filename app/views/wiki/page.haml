= link_to t(:index) ,   wiki_root_path ,   :class => "btn , btn-info root_link"
-if current_user && current_user.wiki_editor?
  = link_to t(:edit) ,   edit_wiki_page_path(@page.name) ,   :class => "btn , btn-info edit_link"
  = link_to t(:rename) , rename_wiki_page_path(@page.name) , :class => "btn , btn-info rename_link"
  = link_to t(:delete) , delete_wiki_page_path(@page.name) , :class => "btn , btn-info delete_link"
  = link_to t(:new) , new_wiki_page_path , :class => "btn , btn-info new_link"
%h3=@page.name
= raw filter @page.content