<section>
  <div class="block-header text-center text-capitalize">
    <h2>
      <i class="md-cloud-download c-indigo">
        Survey Scores
      </i>
    </h2>
  </div>

  <div class="card">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Scheme</th>
            <th>Survey</th>
            <th>Results</th>
          </tr>
        </thead>
        <% @scores.each do |score| %>
        <tr>
          <th><%= score.score_scheme.title %></th>
          <th><%= score.survey.uuid %></th>
          <th><%= link_to 'Scores', project_score_path(current_project, score.id) %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>