<%= semantic_form_for :filter, url: { action: :filter_scores } do |f| %>

<%= f.inputs do %>
<%= f.input :operator, :as => :select, :collection => ["GREATER_THAN_OR_EQUAL_TO"] %>
<%= f.input :score_unit_weight, :as => :select, :collection => [1,2,3,4,5] %>
<%- end %>

  <%= f.actions do %>
  <%= f.action :submit, :label => "Filter Scores" %>
<% end %>
<%- end %>