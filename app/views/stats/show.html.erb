
<div class="row">
  <h2> Instrument: <b> <%= params[:title] %> </b> </h2>
</div>

<div class="row">

  <div id="single-select-stats" class="col-md-6">

    <h4> <b> Single select events </b> </h4>
    <table>
      <tr>
        <th> Event </th>
        <th> Count </th>
      </tr>
      <% @single_select_responses.each do |question_number, response_array| %>

          <tr>
            <td> <b> Variable identifier: </b> </td>
            <td> <b> <%=  question_number  %> </b> </td>
          </tr>
          <% response_array.each do |answer, count|  %>
              <tr>
                <td> <%= answer %> : </td>
                <td> <%= count %> </td>
              </tr>
          <% end %>
          <% stats = simple_descriptive_statistics(response_array.values) %>
          <% stats.each do |statistic, value| %>
              <tr id="descriptive-statistics">
                <td> <%= statistic %> </td>
                <td> <%= value %> </td>
              </tr>
          <% end %>

      <% end %>
    </table>


  </div>

  <div id="multiple-select-stats" class="col-md-6">
    <h4> <b> Multiple select events </b> </h4>
    <table>
      <tr>
        <th> Event </th>
        <th> Count </th>
      </tr>
      <% @multiple_select_responses.each do |number, responses| %>
          <tr>
            <td> <b> Variable identifier: </b> </td>
            <td> <b> <%= number %> </b> </td>
          </tr>
          <% responses.each do |event, count| %>
              <tr>
                <td> <%= event %>  </td>
                <td> <%= count %>  </td>
              </tr>
          <% end %>
      <% end %>
    </table>
  </div>

</div>