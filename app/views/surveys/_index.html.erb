<div class="card">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Survey UUID</th>
          <th>Time Created</th>
          <th>Identifier</th>
          <th>Instrument</th>
          <th>Instrument Version</th>
          <th>Device</th>
          <th>Device Label</th>
          <th>Location</th>
          <th>% Complete</th>
          <th>Responses</th>
        </tr>
      </thead>
      <tbody>
        <% @surveys.each do |survey| %>
        <% if survey.instrument %>
        <tr>
          <td><%= survey.uuid %></td>
          <td><%= survey.created_at %></td>
          <td>
            <%= survey.center_id ? survey.center_id : survey.participant_id %>
          </td>
          <td><%= link_to survey.instrument_title, project_instrument_path(current_project, survey.instrument) %></td>
          <td><%= link_to survey.instrument_version_number,
                                project_instrument_version_path(current_project, survey.instrument, survey.instrument_version_number) %></td>
          <td><%= survey.device_uuid %></td>
          <td><%= survey.device_label ? survey.device_label : (survey.device.label if survey.device) %></td>
          <td>
            <a href="<%= survey.location_link %>" target="_blank"><%= survey.location %></a>
          </td>
          <td><%= survey.completion_rate %></td>
          <td><%= link_to 'View Responses', project_survey_path(current_project, survey) %></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @surveys %>