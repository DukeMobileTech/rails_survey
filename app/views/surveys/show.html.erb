<h1>
  <% if @survey.instrument %>
    <%= @survey.instrument.title %><br /><%= @survey.uuid %>
  <% end %>
</h1>
<section class="widget">
  <header>
    <h4><i class="icon-download-alt"></i> Survey Results</h4>
  </header>
  <div class="body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Question Type</th>
          <th>Question Identifier</th>
          <th>Question Text</th>
          <th>Question Options</th>
          <th>Response</th>
          <th>Special Response</th>
          <th>Other Response</th>
          <th>Created at</th>
          <th>Time taken(sec)</th>
        </tr>
      </thead>
      <tbody>
      <% instrument_version_created_at = @survey.instrument_version.updated_at %>
    <% @survey.responses.each do |response| %>
          <% if response.question %>
          <tr>
          <td><%= response.question.question_type %></td>
          <td><%= response.question.question_identifier %></td>
          <td>
               <%= raw response.question.version_at_time(@survey.instrument_version_number, instrument_version_created_at).text %>
          </td>
          <td>
            <ul class="squares">
              <% response.question.options.each do |option| %>
                <li> <%= option.version_at_time(instrument_version_created_at) %> </li>
              <% end %>
            <ul>
          </td>
          <td><%= response.text %> </td>
          <td><%= response.special_response ? response.special_response : 'NA' %></td>
          <td><%= response.other_response ? response.other_response : 'NA' %></td>
          <td><%= response.created_at %> </td>
          <td><%= response.time_taken_in_seconds ? response.time_taken_in_seconds : 'NA' %></td>
        </tr>
        <% end %>
    <% end %>
      </tbody>
    </table>
  </div>
</section>
