<section class="widget">
  <header>
    <h4><i class="icon-download-alt"></i> Survey Results</h4>
  </header>
  <div class="body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>UUID</th>
          <th>Instrument</th>
          <th>Device</th>
          <th>% complete</th>
          <th>Responses</th>
        </tr>
      </thead>
      <tbody>
      <% @surveys.each do |survey| %>
        <% if survey.instrument %>
        <tr>
          <td><%= survey.uuid %></td>
          <td><%= link_to survey.instrument.title, instrument_path(survey.instrument) %></td>
          <td><%= survey.device.identifier %></td>
          <td><%= survey.percent_complete %>
          <td><%= link_to 'View Responses', survey_path(survey) %></td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
