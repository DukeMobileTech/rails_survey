<div class="tab-identifier tab-pane" role="tabpanel">
  <div class="card">
    <div class="card-header text-center">
      <label>Survey Aggregator -
      </label><%= ' ' + current_project.survey_aggregator %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Survey Identifier</th>
              <th>Survey Count</th>
            </tr>
          </thead>
          <tbody>
            <% @aggregators.each do |agg| %>
            <tr>
              <td><%= link_to current_project.aggregator_label(agg), identifier_surveys_project_survey_path(current_project, agg.id) %></td>
              <td><%= current_project.aggregator_survey_count(agg) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>