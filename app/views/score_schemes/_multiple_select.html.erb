<script type="text/ng-template" id="multipleSelect.html">
  <form name="multipleSelectForm" ng-submit="save()">
    <%= render 'header', title: 'Multiple Select' %>
    <div class="modal-body">
      <div class="row" ng-repeat="num in scoreRange">
        <div class="row">
          <label class="col-md-10 text-right">Check all the options below needed to get a score of:</label>
          <label class="col-md-2 text-left">{{num.value}}</label>
        </div>
        <div class="col-md-6" ng-repeat="option in scoreUnit.option_scores | filter: {value: num.value}">
          <div class="checkbox m-b-15">
            <label>
              <input type="checkbox" name="{{option.label}}_{{option.value}}" ng-model="option.selected"/>
              <i class="input-helper"></i>{{option.label}}
            </label>
          </div>
        </div>
      </div>
    </div>
    <%= render 'footer' %>
  </form>
</script>