<script type="text/ng-template" id="newScoreUnitFirstPage.html">
  <form name="newScoreUnitFormOne" ng-submit="next()">
    <div class="modal-header">
      <h3 class="modal-title text-center c-blue">Creating a new Score Unit</h3>
    </div>

    <div class="modal-body">
      <div class="row">
        <label for="score-unit-question-type" class="col-xs-3">Question Type</label>
        <select class="col-xs-5" ng-model="scoreUnit.question_type" ng-change="questionTypeChanged()"
                ng-options="questionType for questionType in scorableQuestionTypes" name="scoreUnitQuestionType"
                required></select>
        <!--TODO ensure required validation works -->
        <div class="col-xs-4" ng-messages="newScoreUnitFormOne.scoreUnitQuestionType.$error">
          <div class="c-red" ng-message="required">Question type is required!</div>
        </div>
      </div>
      <div class="row">
        <label for="score-unit-min" class="col-xs-3">Minimum Score</label>
        <input type="number" name="scoreUnitMin" ng-model="scoreUnit.min" class="col-xs-5" required/>
          <div class="col-xs-4" ng-messages="newScoreUnitFormOne.scoreUnitMin.$error">
            <div class="c-red" ng-message="required">Minimum score is required!</div>
          </div>
      </div>

      <div class="row">
        <label for="score-unit-max" class="col-xs-3">Maximum Score</label>
        <input type="number" name="scoreUnitMax" ng-model="scoreUnit.max" class="col-xs-5" required/>
        <div class="col-xs-4" ng-messages="newScoreUnitFormOne.scoreUnitMax.$error">
          <div class="c-red" ng-message="required">Maximum score is required!</div>
        </div>
      </div>

      <div class="row">
        <label for="score-unit-weight" class="col-xs-3">Score Weight</label>
        <input type="number" name="scoreUnitWeight" ng-model="scoreUnit.weight" min="1" class="col-xs-5" required/>
        <div class="col-xs-4" ng-messages="newScoreUnitFormOne.scoreUnitWeight.$error">
          <div class="c-red" ng-message="required">Score weight is required!</div>
          <div class="c-red" ng-message="min">Minimum weight is 1!</div>
        </div>
      </div>

      <div class="questions-modal-box">
        <h3 class="text-center c-blue">Select Questions for this Score Unit</h3>
        <div class="col-sm-6" ng-repeat="question in questions">
          <input type="checkbox" checklist-model="scoreUnit.question_ids" checklist-value="question.id"
                 name="scoreUnitQuestions">
            <span> {{question.question_identifier}}</span>
          </input>
        </div>
        <!--TODO ensure required validation works -->
        <div ng-messages="newScoreUnitForm.scoreUnitQuestions.$error">
          <div class="c-red" ng-show="!someQuestionSelected()">
            Select at least one question
          </div>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button class="btn btn-primary" type="submit">Next</button>
      <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
    </div>
  </form>
</script>

<script type="text/ng-template" id="newScoreUnitSecondPage.html">
  <form name="newScoreUnitFormTwo" ng-submit="save()">
  <div class="modal-header">
    <h3 class="modal-title text-center c-blue">Creating a new Score Unit</h3>
  </div>

  <div class="modal-body">
    <div class="row">
      <label class="col-xs-8">Option Text</label>
      <label class="col-xs-2">Score if selected</label>
      <div class="col-xs-2"></div>
    </div>
    <div class="row" ng-repeat="option in scoreUnit.option_scores | orderBy: 'option_id'">
      <div class="col-xs-7 text-left">{{option.text}}</div>
      <input type="number" class="col-xs-2 text-left" ng-model="option.score" min="{{scoreUnit.min}}"
             max="{{scoreUnit.max}}" name="optionScoreValue{{$index}}" required/>
      <div class="col-xs-3" ng-messages="newScoreUnitFormTwo['optionScoreValue' + $index].$error">
        <div class="c-red" ng-message="required">Option score value is required!</div>
        <div class="c-red" ng-message="min">Value is below allowed minimum</div>
        <div class="c-red" ng-message="max">Value is above allowed maximum</div>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
  </div>
  </form>
</script>