<div class="block-header text-center text-capitalize">
  <h2>
    <i class="md-language c-indigo">
      Translations for
      <%= @instrument.title %>
    </i>
  </h2>
</div>

<div class="card">
  <div class="card-header">
    <%= link_to new_project_instrument_instrument_translation_path(current_project, @instrument), class: 'm-5 btn btn-primary pull-right' do %>
    <i class="md-add">
      New Translation
    </i>
    <% end %>
    <%= link_to new_gt_project_instrument_instrument_translations_path(current_project, @instrument), class: 'm-5 btn btn-primary pull-right' do %>
    <i class="md-add">
      New Translation (Google Translate)
    </i>
    <% end %>
    <%= link_to translation_template_export_project_instrument_path(current_project, @instrument, format: :csv), class: 'm-5 btn btn-primary pull-right' do %>
    <i class="md-cloud-download">
      Translation Template
    </i>
    <% end %>
    <%= form_tag import_translation_project_instrument_instrument_translations_path(current_project, @instrument), multipart: true do %>
    <%= file_field_tag :file, accept: 'text/csv', required: true, class: 'fileinput-new' %>
    <%= submit_tag 'Upload Translations CSV', class: 'btn-primary btn-file' %>
    <% end %>
  </div>
</div>

<div class="card-body card-padding">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Language</th>
          <th>Title</th>
          <th>Active</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @instrument_translations.each do |translation| %>
        <tr>
          <td><%= link_to translation.language, project_instrument_instrument_translation_path(current_project, @instrument, translation) %></td>
          <td><%= translation.title %></td>
          <td><%= translation.active %></td>
          <td><%= translation.created_at %></td>
          <td><%= translation.updated_at %></td>
          <td>
            <%= button_to 'Delete', project_instrument_instrument_translation_path(current_project, @instrument, translation), method: :delete, class: 'btn-danger', data: {confirm: 'Are you sure?'} %>
          </td>
          <td>
            <%= button_to 'Edit', edit_project_instrument_instrument_translation_path(current_project, @instrument, translation), method: :get, class: 'btn-primary' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>