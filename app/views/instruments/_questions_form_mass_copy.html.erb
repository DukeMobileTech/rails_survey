<div class="tab-copy tab-pane">
  <fieldset class="m-20">
    <legend class="text-center text-capitalize"><strong>Instruments to copy questions to</strong></legend>
    <p class="text-muted">Check the instruments that you want to copy questions to.</p>

    <div class="form-group">
      <div ng-repeat="inst in instruments">
        <label> <input type="checkbox" ng-model="inst.checked"><span class="m-l-10"></span> {{ inst.title }} </label>
      </div>
    </div>

    <legend class="text-center text-capitalize"><strong>Questions to be copied</strong></legend>
    <p class="text-muted">Check the questions that you want copied to the instruments checked above</p>

    <div class="form-group">
      <div class="col-sm-6" ng-repeat="quest in all_questions">
        <label>
          <input type="checkbox" ng-model="quest.checked"><span class="m-l-10"></span>
          {{ quest.question_identifier }}
        </label>
      </div>
    </div>
  </fieldset>
  <a class="btn btn-success pull-right" id="copy-questions" ng-click="copyQuestions()">Copy Questions</a>
  <div class="clearfix"></div>
</div>