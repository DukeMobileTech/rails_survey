<h1> 
    <%= @instrument.title %> 
    <span class="label label-success"> 
        <i class="icon-bookmark"></i> 
        <strong>Current Version: <%= @instrument.current_version_number %></strong> 
    </span> 
    <% if @instrument.published %> 
        <span class="label label-success"> 
            <i class="icon-eye-open"></i> 
            <strong>Published</strong> 
        </span> 
    <% else %> 
        <span class="label label-danger"> 
            <i class="icon-eye-close"></i> 
            <strong>Not Published</strong> 
        </span> 
    <% end %> 
</h1>

<section class="widget">
  <header>
    <div class="actions hidden-xs-portrait"> 
      <%= link_to csv_export_project_instrument_path(@project, @instrument, format: :csv, filename: "#{@instrument.title}_#{@instrument.current_version_number}.csv"), class: 'btn btn-primary' do %>
        <i class="icon-circle-arrow-down"></i> CSV Export
      <% end %>
      <%= link_to pdf_export_project_instrument_path(@project, @instrument, format: :pdf, filename: "#{@instrument.title}_#{@instrument.current_version_number}.pdf"), class: 'btn btn-primary' do %>
          <i class="icon-print"></i> PDF Export
      <% end %>
      <%= link_to project_instrument_instrument_translations_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-globe"></i> Translations
      <% end %>
      <%= link_to project_instrument_versions_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-repeat"></i> Past Versions
      <% end %>
      <%= link_to edit_project_instrument_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-edit"></i> Edit Instrument 
      <% end %>
      <%= link_to project_instrument_sections_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-list"></i> Sections
      <% end %>
      <%= link_to move_project_instrument_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-move"> Move Instrument</i>
      <% end %>
      <%= link_to copy_project_instrument_path(@project, @instrument), class: 'btn btn-primary' do %>
          <i class="icon-copy"> Copy Instrument</i>
      <% end %>
      <%= link_to project_instrument_grids_path(@project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-th"> Tables</i>
      <% end %>
    </div>
  </header>
  <div class="body">
      <%= render 'questions_form' %>
  </div>
</section>
