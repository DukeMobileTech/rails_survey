<div class="block-header text-center text-capitalize">
  <h2><i class="md-edit c-indigo"> Instrument </i></h2>
</div>

<div class="card">
  <div class="card-body card-padding">
    <%= form_for [@project, @instrument], html: {class: 'form-horizontal label-left'} do |f| %>
        <% if @instrument.errors.any? %>
            <div class="error_messages">
              <h2><%= pluralize(@instrument.errors.count, 'error') %> prohibited this survey from being saved:</h2>
              <ul>
                <% @instrument.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, 'Instrument Title', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: 'fg-line form-control input-sm', placeholder: 'Enter instrument title' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :language, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.select(:language, options_for_select(Settings.languages, @instrument.language), {}, {class: 'form-control'}) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :published, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.check_box :published, class: 'checkbox' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :show_instructions, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.check_box :show_instructions, class: 'checkbox' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :special_options, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% Settings.special_responses.each do |option| %>
                <div>
                    <%= check_box_tag 'instrument[special_options][]', option, @instrument.special_options.include?(option) %>
                    <%= option %>
                </div>
            <% end %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
