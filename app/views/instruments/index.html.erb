<section class="widget">
  <header>
    <h4><i class="icon-edit"></i> Instruments</h4>
    <div class="actions hidden-xs-portrait"> 
      <%= link_to new_instrument_path, class: 'btn btn-primary' do %>
        <i class="icon-plus"></i> New Instrument 
      <% end %>
    </div>
  </header>
  <div class="body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Instrument Id</th>
          <th>Current Version</th>
          <th># questions</th>
          <th>Created at</th>
          <th>Last updated</th>
        </tr>
      </thead>
      <tbody>
    <% @instruments.each do |instrument| %>
        <tr>
          <td><%= link_to instrument.title, instrument_path(instrument) %></td>
          <td><%= instrument.id %></td>
          <td><%= instrument.current_version_number %></td>
          <td><%= instrument.questions.count %></td>
          <td><%= instrument.created_at %></td>
          <td><%= instrument.updated_at %></td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</section>
